            @if (User.IsInRole(RoleConstants.Roles.Administrator))
            {
                <a class="btn btn-primary"  asp-controller="Home" asp-action="EditBodyChart" asp-route-chartid="@bac.Burialid">Edit Chart</a>
            }
        </div>
    </div>
}
