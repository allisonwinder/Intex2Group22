@*<a class="btn btn-primary" asp-controller="Home" asp-action="AddTextile" asp-route-mummyid="@Model.burial.Id">Add Textile</a>*@
<br/>
<br/>
    @foreach (Textile t in Model.textiles)
    {
    <div class="card card-outline-primary bg-light m-1 p-1 mx-auto" style="width: 60rem;">
        <div class="bg-faded p-1">
           <p class="pedit">Textile Description: @t.Description</p>
            <p>Locality: @t.Locale</p>
            <p>Directions: @t.Direction
                @if (User.IsInRole(RoleConstants.Roles.Administrator))
                {
                    <a class="btn btn-primary" asp-controller="Home" asp-action="EditTextile" asp-route-textileid="@t.Id" style="float:right">Edit Textile</a>
                }
            </p>
                
            @foreach (ColorTextile ct in Model.coltexts)
            {
                @if (t.Id == ct.MainTextileid)
                {
                    @foreach(Color c in Model.colors)
                    {
                        @if (c.Id == ct.MainColorid)
                        {
                            <p class="pedit">Textile Color: @c.Value
                                @if (User.IsInRole(RoleConstants.Roles.Administrator))
                                {
                                        <a class="btn btn-primary" asp-controller="Home" asp-action="EditColor" asp-route-colorid="@c.Id" style="float:right">Edit Color</a>
                                 }
                                </p>

            }   
                    }
                }
            }

            @foreach (TextilefunctionTextile tft in Model.functstexts)
            {
                @if (t.Id == tft.MainTextileid)
                {
                    @foreach (Textilefunction tf in Model.textilefunctions)
                    {
                        @if (tf.Id == tft.MainTextilefunctionid)
                        {
                            
                            <p class="pedit">Function: @tf.Value
                                @if (User.IsInRole(RoleConstants.Roles.Administrator))
                                {
                                    <a class="btn btn-primary" asp-controller="Home" asp-action="EditFunction" asp-route-functionid="@tf.Id" style="float:right">Edit Function</a>
                                }
                            </p>
                            
                    }
                        }
                    }
                }
        @foreach (StructureTextile st in Model.structexts)
        {
            @if (t.Id == st.MainTextileid)
            {
                @foreach (Structure s in Model.structures)
                {
                    @if (st.MainStructureid == s.Id)
                    {
                            <p class="pedit">Structure: @s.Value
                                @if (User.IsInRole(RoleConstants.Roles.Administrator))
                                {
                                    <a class="btn btn-primary" asp-controller="Home" asp-action="EditStructure" asp-route-structureid="@s.Id" style="float:right">Edit Structure</a>
                                }
                            </p>
                       
                    }
                }
            }
        }
        </div>
        </div>
    <br /><br />
        
    }

    @foreach (Bodyanalysischart bac in Model.charts)
{
       <div class="card card-outline-primary bg-light m-1 p-1 mx-auto" style="width: 60rem;">
