@using Microsoft.AspNetCore.Identity;
@using Intex2Group22.Areas.Identity.Data;
@using Intex2Group22.Core;


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intex2Group22</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Intex2Group22.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-top"style="background-color: #002E5D">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow text-primary nav navbarupper">
            <div class="container-fluid text-primary">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Intex2Group22</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="allMummies">View Mummies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="SupervisedModel">Supervised Model</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="UnsupervisedModel">Unsupervised Model</a>
                        </li>
                        @if (User.IsInRole(RoleConstants.Roles.Administrator))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="User" asp-action="Index">Users</a>
                            </li>
                        }
                        
                            
                      
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>
   


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/qrcode.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_CookieConsentPartial" />
    <footer class="fixed-bottom border-top bg-light">
        <div class="container">
            &copy; 2023 - Intex2Group22 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> @*Here is our GDPR Compliant Privacy Policy*@
        </div>
    </footer>
</body>
</html>
